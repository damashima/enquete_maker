<h4>質問詳細</h4>
<p><%= @question.text %></p>
<ul style="list-style-type: none">
<%= form_with(model: [@question, @question.answers.build], local: true) do |f| %>
  <% @question.question_selects.each do |q| %>
    <li><label><%= f.radio_button :question_select_id, 1  %><%= q.question_selects %>テスト1</label></li>
    <li><label><%= f.radio_button :question_select_id, 1  %><%= q.answers %>テスト2</label></li>

    <%= f.hidden_field :end_user_id, value: current_end_user.id %>
  <% end %>
  <%= f.submit "回答" %>
<% end %>
</ul>


<% if @question.favorited_by?(current_end_user) %>
    <p>
      <%= link_to question_favorites_path(@question), method: :delete do %>
        ♥<%= @question.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to question_favorites_path(@question), method: :post do %>
        ♡<%= @question.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>