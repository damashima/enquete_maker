<h1>質問投稿フォーム</h1>
  <%= form_with model: @question do |f| %>
    <%= f.label :質問文 %>
    <%= f.text_area :text %><br>

    <%= f.fields_for :question_selects do |question_select| %>
      <%= f.label :選択肢1 %>
      <%= f.text_field :selected %><br>

      <%= f.label :選択肢2 %>
      <%= f.text_field :selected %><br>

      <%= f.label :選択肢3 %>
      <%= f.text_field :selected %><br>

      <%= f.label :選択肢4 %>
      <%= f.text_field :selected %><br>
      <br>
    <% end %>

    <%= f.submit '投稿' %>
  <% end %>